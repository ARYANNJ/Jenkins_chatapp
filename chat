node{
    stage('SCM Checkout'){
        git url: 'https://github.com/Sanjana-cell/Django-Chat-Application.git'
    }
    stage('Build Docker Image'){
        sh 'docker build -t sanjanakr/my-app:2.0.0 .'
    }

    stage('Push Docker Image'){
        withCredentials([string(credentialsId: 'docker-pwd', variable: 'dockerHubPwd')]) {
            sh "docker login -u sanjanakr -p ${dockerHubPwd}"
        }
        sh 'docker push sanjanakr/my-app:2.0.0'
    }

    stage('Run Container on Dev Server'){
        def dockerRun = 'docker run -d -p 9001:8000 -d --network database1_network --link mysqldb --name my-app sanjanakr/my-app:2.0.0'
        sh "sudo ssh -i /sanjana.pem -o StrictHostKeyChecking=no ubuntu@190.178.0.11 ${dockerRun}"
        }
}


